// tsconfig.node.json
{
  "compilerOptions": {
    /* incremental info */
    "incremental": true,  
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    /* ES2023 runtime and libs appropriate for a build-tool script */
    // "target": "ES2023",
    // "lib": ["ES2023"],

    /* ---- node-style resolution & module system ---- */
    "moduleResolution": "NodeNext",     // ðŸ‘ˆ change from "bundler"
    "module": "NodeNext",           // or "CommonJS" if you prefer require()

    /* additional niceties you already had */
    //"allowImportingTsExtensions": true,
    //"verbatimModuleSyntax": true,
    "moduleDetection": "force",

    /* analysis flags */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    //"erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    //"noUncheckedSideEffectImports": true,

    /* tooling */
    "skipLibCheck": true
  },
  "include": ["vite.config.ts"],
  "exclude": ["node_modules"]
}
